{
    "extends": [
        "stylelint-prettier/recommended",
        "stylelint-config-standard-scss"
    ],
    "plugins": ["stylelint-prettier"],
    "rules": {
        "prettier/prettier": true,
        "scss/at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["tailwind"]
            }
        ]
    }
}